<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTintMode="src_atop"
    app:cardBackgroundColor="#acc4cc">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/anime_poster_card"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/no_image"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/title_anime_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Название"
                android:paddingHorizontal="5dp"
                android:textSize="20sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/line_drawble"
                android:layout_marginVertical="3dp"
                android:layout_marginRight="30dp" />
<!--                <TextView-->
<!--                    android:id="@+id/genres_texts_view_card"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:paddingHorizontal="5dp"-->
<!--                    android:maxLines="1"-->
<!--                    android:layout_height="wrap_content"-->

<!--                    android:textSize="20sp"-->
<!--                    android:text="Жанры"/>-->
<!--                <View-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="3dp"-->
<!--                    android:maxLines="1"-->
<!--                    android:background="@drawable/line_drawble"-->
<!--                    android:layout_marginVertical="3dp"-->
<!--                    android:layout_marginEnd="30dp" />-->
            <TextView
                android:id="@+id/description_anime_card"
                android:maxLines="4"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:textSize="20sp"
                android:text="Описание\n\n\n\n"/>
<!--                <View-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="3dp"-->
<!--                    android:maxLines="1"-->
<!--                    android:background="@drawable/line_drawble"-->
<!--                    android:layout_marginVertical="3dp"-->
<!--                    android:layout_marginEnd="30dp" />-->
            <TextView
                android:id="@+id/raiting_anime_card"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="20sp"
                android:text="5/5"
                android:drawableStart="@drawable/raiting_star"
                android:drawableTint="#E8D957"
                android:drawablePadding="5dp"/>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
