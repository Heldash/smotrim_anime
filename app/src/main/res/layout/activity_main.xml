<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avatatar_profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:backgroundTintMode="src_over">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_main"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:strokeWidth="3dp"
        app:strokeColor="#052718"
        android:layout_centerHorizontal="true"
        app:shapeAppearanceOverlay="@style/RoundPhoto"
        android:src="@drawable/lycy"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_below="@id/image_main"
        android:id="@+id/auth_lin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/acent"
            android:backgroundTint="@color/acent"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Авторизация"
            android:textSize="32sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/loginPole"
            android:hint="Почта"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_border"
            android:layout_below="@id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:textColorHint="@color/gray_finish"
            android:drawableStart="@drawable/mail_icon"
            android:textSize="24sp"
            android:layout_marginBottom="10dp"
            android:paddingVertical="10dp"
            android:drawablePadding="7dp"
            android:singleLine="true"
            android:layout_marginHorizontal="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/loginText"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">
        <EditText
            android:textColorHint="@color/gray_finish"
            android:id="@+id/passwordPole"
            android:hint="Пароль"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="24sp"
            android:background="@drawable/edit_text_border"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:paddingVertical="10dp"
            android:drawableStart="@drawable/password_image"
            android:drawablePadding="7dp"
            />
            <ImageView
                android:clickable="true"
                android:id="@+id/visible_password_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/passwordPole"
                android:layout_centerVertical="true"
                android:paddingHorizontal="10dp"
                android:layout_alignBottom="@id/passwordPole"
                android:layout_alignTop="@id/passwordPole"
                android:src="@drawable/watched"
                android:scaleType="centerCrop"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:theme="@style/actionBtn"
            android:backgroundTint="@color/color_button"
            android:layout_marginTop="10dp"
            android:text="ВОЙТИ"/>
<!--            android:background="@drawable/btn_shape"/>-->

        <Button
            android:id="@+id/reg_btn_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/color_button"
            android:paddingVertical="15dp"
            android:text="Регистрация"
            android:textStyle="bold"
            android:theme="@style/actionBtn" />

        <Button
            android:id="@+id/guest_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/color_button"
            android:paddingVertical="15dp"
            android:text="Войти как гость"
            android:textStyle="bold"
            android:theme="@style/actionBtn" />

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal"-->
<!--            android:paddingTop="10dp">-->


<!--        </LinearLayout>-->
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Смирнов Игорь РИБО-01-22"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>
